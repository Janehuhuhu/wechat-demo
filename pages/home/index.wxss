swiper {
  height: 350rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.grid-list {
  height: 600rpx;
  display: flex;
  flex-wrap: wrap;
}
.grid-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
}
.grid-item image {
  width: 60rpx;
  height: 60rpx;
}
.grid-item text {
  font-size: 30rpx;
  color: black;
  margin-top: 5rpx;
}

.img-box {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0 120rpx;
}

.img-box image {
  width: 45%;
}